@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Kategori Güncelleme Sayfası</h1>
@using (Html.BeginForm("EditCategory", "AdminCategory",FormMethod.Post)){
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextAreaFor(x=>x.CategoryId,new {@class="form-control"}) @*Sayfa açıldığında hangisini güncellemek istiyorsak ekranda o çıkmasını sağlıyor.*@

        @Html.Label("Kategori Adı")
        @Html.TextAreaFor(x=>x.CategoryName,new {@class="form-control"})

        @Html.Label("Kategori Açıklaması")
        @Html.TextAreaFor(x=>x.CategoryDescription,new {@class="form-control"})
        <br /><br />
        <button class="btn btn-success">Güncelle</button>

    </div>
}

