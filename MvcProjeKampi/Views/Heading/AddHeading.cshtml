@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Başlık Ekleme</h1>
<br />
@*ilk parametre gidilecek olan action ismi 2.parametre controllerın ismi 3.parametre post mu getmi olduğu*@
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x=>x.HeadingName,new {@class="form-control"})
        @Html.ValidationMessageFor(x=>x.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.vlc,new {
        @class="form-control"})
        <br />
        @Html.Label("Yazar Mail")
        @Html.DropDownListFor(x=>x.WriterId,(List<SelectListItem>)ViewBag.vlw,new {@class = "form-control"})
        @Html.ValidationMessageFor(x=>x.WriterId)
        <br />
        <button class="btn btn-info">Başlığı Oluştur</button>
    </div>
}

